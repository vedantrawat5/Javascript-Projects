    <script>
        function $4shots()
            {
            var a,b,c,d,e;

            a=Number(document.getElementById("apple").value);

            b=Number(document.getElementById("ball").value);

            c=Number(document.getElementById("cat").value);

            d=Number(document.getElementById("dog").value);

            e=a+b+c+d;

            
            document.getElementById("elef").value=e;

            }
    </script>
