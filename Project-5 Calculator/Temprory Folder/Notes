    <label for="num_03">Enter Third Number</label>
    <input type="text" id="cat">

    <label for="num_04">Enter Fourth Number</label>
    <input type="text" id="dog">

    <label for="result">Result:</label>
    <input type="text" id="elef">

    <button type="button" onclick="$4shots()">Result</button>
